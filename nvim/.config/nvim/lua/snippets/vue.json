	"Vue 3 Script Setup": {
		"prefix": "vsetup",
		"body": "<template>\n\t<${2:div}>\n\t\t$3\n\t</${2:div}>\n</template>\n\n<script setup>\n$1\n</script>",
		"description": "Scaffold out a Vue 3 component using the setup script"
	},
	"Import Vue Component": {
		"prefix": "vimport",
		"body": "import ${1:New} from '@/components/${1:New}'",
		"description": "Import a local Vue component into the current component"
	},
	"Vue Components block": {
		"prefix": "vcomponents",
		"body": "components: {\n\t${1:New},\n},"
	},
	"Vue Filters": {
		"prefix": "vfilter",
		"body": "filters: {\n\t${1:name}(${2:value}) {\n\t\treturn ${2:value}$0\n\t}\n},"
	},
	"Vue Props": {
		"prefix": "vprops",
		"body": "props: {\n\t${1:prop}: {\n\t\ttype: ${2:String}${3:,\n\t\tdefault: ''}${4:,\n\t\trequired: true}\n\t},\n},"
	},
	"Vue Data": {
		"prefix": "vdata",
		"body": "data() {\n\treturn {\n\t\t$1\n\t}\n},"
	},
	"Vue Computed": {
		"prefix": "vcomputed",
		"body": "computed: {\n\t${1:name}() {\n\t\t$0\n\t}\n},"
	},
	"Vue Watchers": {
		"prefix": "vwatcher",
		"body": "watch: {\n\t${1:name}(${2:newValue}, ${3:oldValue}) {\n\t\t$0\n\t}\n},"
	},
	"Vue Created hook": {
		"prefix": "vcreated",
		"body": "${1:async }created() {\n\t$0\n},"
	},
	"Vue Mounted hook": {
		"prefix": "vmounted",
		"body": "mounted() {\n\t$0\n},"
	},
	"Vue Destroyed hook": {
		"prefix": "vdestroyed",
		"body": "destroyed() {\n\t$0\n},"
	},
	"Vue Methods": {
		"prefix": "vmethod",
