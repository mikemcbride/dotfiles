	"Basic Vue Component": {
		"prefix": "vbase",
		"body": [
			"<template>",
			"\t<div>",
			"\t\t$4",
			"\t</div>",
			"</template>",
			"",
			"<script>",
			"export default {",
			"\tname: '${1:MyComponent}'",
			"}",
			"</script>",
			"",
			"<style>",
			"",
			"</style>"
		],
		"description": "Scaffold out a basic Vue single file component"
