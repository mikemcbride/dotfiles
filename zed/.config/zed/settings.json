{
    "project_panel": {
        "dock": "right"
    },
    "features": {
        "copilot": false
    },
    "buffer_font_family": "MonoLisa",
    "buffer_font_size": 16,
    "theme": "Atelier Cave Light",
    "format_on_save": "off",
    "soft_wrap": "editor_width",
    "vim_mode": true,
    "tab_size": 2,
    "relative_line_numbers": true,
    "language_overrides": {
        "Markdown": {
            "soft_wrap": "preferred_line_length"
        }
    },
    "experiments": {
      "experimental_themes": true
    }
}
